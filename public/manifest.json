{
  "manifest_version": 3,
  "name": "Reboost - Track Water Intake and Set Reminders",
  "version": "1.2.5",
  "description": "Track your water intake and set custom reminders. Stay hydrated, stay on track, and never miss a break! âœ¨",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "notifications", "alarms"],
  "background": {
    "service_worker": "background.js"
  }
}
